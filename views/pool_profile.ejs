    <!-- end: Page title -->
    <hr class="space">

    <section>
      <div class="container">
        <!-- Blog -->
        <div id="blog" class="grid-layout post-4-columns m-b-30" data-item="post-item">

          <!-- Post item-->

          <%
            for(var i=0; i<userList.length; i++) {
            %>

            <div class="post-item border">
              <div class="post-item-wrap">
                <div class="post-image">
                  <a href="#">
                    <img alt="" src="/images/<%=userList[i]._id%>.png">
                  </a>
                  <span class="post-meta-category">
                    <a href="">Batch#
                      <%=userList[i].batchNumber%>
                    </a>
                  </span>
                </div>
                <div class="post-item-description">
                  <h2 class="justifier">
                    <a href="#">
                      <%=userList[i].firstName%>
                        <%=userList[i].lastName%>
                    </a>
                  </h2>
                  <h5 class="justifier">
                    <a href="#">
                      <%=userList[i].statusType%>
                    </a>
                  </h5>
                  <p class="justifier">
                    <%=userList[i].myDescription%>
                  </p>

                  <a href="#" class="item-link">Read More
                    <i></i>
                  </a>

                </div>
              </div>
            </div>

            <%
          }
          %>

              <!-- end: Post item-->

        </div>
    </section>

