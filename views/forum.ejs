            <!-- end: Page title -->

            <!-- Content -->
            <section id="page-content" class="sidebar-left">
                <div class="container">
                    <div class="row">
                        <!--ICI-->
                        <!-- Sidebar-->
                        <div class="sidebar col-md-4">
                            <div class="pinOnScroll">

                                <!--Navigation-->

                                <div class="widget">
                                    <h4 class="widget-title">Liste des forums ouverts</h4>
                                    <div id="mainMenu" class="menu-vertical">
                                        <div class="container">
                                            <nav>
                                                <ul>
                                                    <li class="active">
                                                        <a class="scroll-to" href="#forum">
                                                            <i class="fa fa-arrow-circle-right"></i> Conseils pour les entretiens</a>
