<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="INSPIRO" />
    <meta name="description" content="Themeforest Template Polo">
    <!-- Document title -->
    <title>Trombinoscope</title>
    <!-- Stylesheets & Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,800,700,600|Montserrat:400,500,600,700|Raleway:100,300,600,700,800"
        rel="stylesheet" type="text/css" />
    <link href="../stylesheets/plugins.css" rel="stylesheet">
    <link href="../stylesheets/style.css" rel="stylesheet">
    <link href="../stylesheets/responsive.css" rel="stylesheet">
    <link href="../stylesheets/page_profile.css" rel="stylesheet">
    <link rel="/stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</head>

<body>
    <% include ./partials/header %>

        <!-- Page title -->
        <section id="page-title" class="page-title-classic" style="background-image: linear-gradient(to top, #48c6ef 0%, #6f86d6 100%);">
            <div class="container">
                <div class="breadcrumb">
                    <ul>
                        <li>
                            <a href="/" style="color:white;">Home</a>
                        </li>
                        <li class="active">
                            <a href="/trombinoscope_5" style="color:white;">Trombinoscope</a>
                        </li>
                    </ul>
                </div>
                <div class="page-title">
                    <h1 style="color:white;">Trombinoscope</h1>
                    <p style="color:white;">Nos batcheurs, encore nos batcheurs#!</p>
                </div>
            </div>
        </section>
        <!-- end: Page title -->

        <!-- Wrapper -->
        <div id="wrapper">

            <!-- Content -->
            <section id="page-content">
                <div class="container">
                    <!-- Portfolio Filter -->
                    <nav class="grid-filter gf-outline" data-layout="#portfolio">
                        <ul>
                            <li class="active">
                                <a href="#" data-category="*">Show All</a>
                            </li>
                            <li>
                                <a href="#" data-category=".pf-B1">Batch 1</a>
                            </li>
                            <li>
                                <a href="#" data-category=".pf-B2">Batch 2</a>
                            </li>
                            <li>
                                <a href="#" data-category=".pf-B3">Batch 3</a>
                            </li>
                            <li>
                                <a href="#" data-category=".pf-B4">Batch 4</a>
                            </li>
                            <li>
                                <a href="#" data-category=".pf-B5">Batch 5</a>
                            </li>
                        </ul>
                    </nav>
                    <!-- end: Portfolio Filter -->

                    <!-- Portfolio -->
                    <div id="portfolio" class="grid-layout portfolio-5-columns" data-margin="5">

                        <%
                    for(var i=0; i<userList.length; i++) {
                    %>

                            <!-- portfolio item -->
                            <div class="portfolio-item img-zoom pf-B<%=userList[i].batchNumber%>">
                                <div class="portfolio-item-wrap">
                                    <div class="portfolio-image">
                                        <a href="#">
                                            <img src="/images/<%=userList[i]._id%>.png" alt="">
                                        </a>
                                    </div>
                                    <div class="portfolio-description">
                                        <a title="<%=userList[i].firstName%> <%=userList[i].lastName%>" data-lightbox="image" href="/images/<%=userList[i]._id%>.png">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- end: portfolio item -->

                            <%
                  }
                  %>
                    </div>
                    <!-- end: Portfolio -->
                </div>
            </section>
            <!-- end: Content -->

        </div>
        <!-- end: Wrapper -->
        <br></br>

        <% include ./partials/footer %>

            <!-- Go to top button -->
            <a id="goToTop">
                <i class="fa fa-angle-up top-icon"></i>
                <i class="fa fa-angle-up"></i>
            </a>

            <!--Plugins-->
            <script src="../javascripts/jquery.js"></script>
            <script src="../javascripts/plugins.js"></script>
            <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
            <!--Template functions-->
            <script src="../javascripts/functions.js"></script>
</body>

</html>