<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="INSPIRO" />
    <meta name="description" content="Themeforest Template Polo">
    <!-- Document title -->
    <title>Home Page</title>
    <!-- Stylesheets & Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,800,700,600|Montserrat:400,500,600,700|Raleway:100,300,600,700,800"
        rel="stylesheet" type="text/css" />
    <link href="/stylesheets/plugins.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/responsive.css" rel="stylesheet">
</head>

<body>
    <!-- Wrapper -->
    <div id="wrapper">
        <% include ./partials/header %>
            <!-- Inspiro Slider -->
            <div id="slider" class="inspiro-slider slider-fullscreen arrows-large arrows-creative dots-creative" data-height-xs="360">

                <!-- Slide 1 -->
                <div class="slide" style="background-image: linear-gradient(to top, #48c6ef 0%, #6f86d6 100%);">
                    <div class="container">
                        <div class="slide-captions text-center">
                            <!-- Captions -->
                            <h1 data-caption-animation="zoom-out"> <i class="fa fa-space-shuttle text-danger"></i> La Fusée <i class="fa fa-space-shuttle text-danger"></i></h1>
                            <br>
                            <p class="lead">La Fusée te permet de garder le contact avec les anciens...</p>
                            <br>
                            <div data-caption-animation="zoom-out">
                                <%if(!user){%>
                                <h3 data-caption-animation="zoom-out">1, 2, 3, GO!</h3>
                                <a href="/users" class="play-button">
                                    <i class="fa fa-arrow-right"></i>
                                </a>
                                <%} else { %>
                                <h3 data-caption-animation="zoom-out">Bienvenue <%=user.firstName%>! </h3>
                                <%}%>
                            </div>
                            <!-- end: Captions -->
                        </div>
                    </div>
                </div>
                <!-- end: Slide 1 -->
            </div>
            <div>
                <% include ./partials/footer %>
            </div>
    </div>
    <!-- end: Wrapper -->

    <!--Plugins-->
    <script src="../javascripts/jquery.js"></script>
    <script src="../javascripts/plugins.js"></script>

    <!--Template functions-->
    <script src="../javascripts/functions.js"></script>
</body>

</html>
