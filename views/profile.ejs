                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="upper" for="name">HTML proficiency</label>
                      <input type="number" min="0" max="100" class="form-control required" name="html_level" placeholder="0-100" id="" aria-required="true" value="">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="upper" for="name">CSS proficiency</label>
                      <input type="number" min="0" max="100" class="form-control required" name="css_level" placeholder="0-100" id="" aria-required="true" value="">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="upper" for="email">Boostrap proficiency</label>
                      <input type="number" min="0" max="100" class="form-control required" name="bootstrap_level" placeholder="0-100" id="" aria-required="true" value="">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="upper" for="name">JavaScript proficiency</label>
                      <input type="number" min="0" max="100" class="form-control required" name="javascript_level" placeholder="0-100" id="" aria-required="true" value="">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="upper" for="name">React.js proficiency</label>
                      <input type="number" min="0" max="100" class="form-control required" name="react_level" placeholder="0-100" id="" aria-required="true" value="">
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label class="upper" for="email">Node.js proficiency</label>
                      <input type="number" min="0" max="100" class="form-control required" name="node_level" placeholder="0-100" id="" aria-required="true" value="">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="upper" for="comment">About myself</label>
                      <textarea class="form-control required" name="myDescription" rows="5" placeholder="Enter comment" id="" aria-required="true"> <% if(user){%><%= user.myDescription %> <%}%></textarea>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="upper" for="comment">My dreamed Job</label>
                      <textarea class="form-control required" name="wantedJob" rows="5" placeholder="Enter comment" id="" aria-required="true"> <% if(user){%><%= user.wantedJob %> <%}%> </textarea>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="upper" for="comment">What I want to do</label>
                      <textarea class="form-control required" name="wanttoDo" rows="5" placeholder="Enter comment" id="" aria-required="true"> <% if(user){%><%= user.wanttoDo %> <%}%> </textarea>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="upper" for="comment">What I do not want to do</label>
                      <textarea class="form-control required" name="notwanttoDo" rows="5" placeholder="Enter comment" id="" aria-required="true"> <% if(user){%><%= user.notwanttoDo %> <%}%> </textarea>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group text-center">
                      <button class="btn btn-default" type="submit"><i class="fa fa-paper-plane"></i>&nbsp;Save my settings</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!--END: Default Form-->
          <hr class="space">

          <% include ./partials/footer %>

        </div>
        <!-- end: Wrapper -->

        <!-- Go to top button -->
        <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a>

<!--Plugins-->
 <script src="../javascripts/jquery.js"></script>
 <script src="../javascripts/plugins.js"></script>

<!--Template functions-->
 <script src="../javascripts/functions.js"></script> </body>

</html>
